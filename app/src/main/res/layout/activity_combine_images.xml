<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rohit.silkproject1.CombineImages"
    android:background="@drawable/back">

    <Button
        android:layout_width="@dimen/abc_search_view_text_min_width"
        android:layout_height="wrap_content"
        android:text="Select Images"
        android:id="@+id/multipleImageSelectionBtn"
        android:textColor="#49d8fb77"
        android:background="#ff1f0f19"
        android:layout_alignTop="@+id/combineImagesBtn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/abc_search_view_text_min_width"
        android:layout_height="wrap_content"
        android:text="COMBINE IMAGES"
        android:id="@+id/combineImagesBtn"
        android:textColor="#49d8fb77"
        android:background="#ff1f0f19"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/multipleImageSelectionBtn" />

</RelativeLayout>
